---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Programmes">
    <section class="page-header">
        <div class="container">
            <h1>The Programme</h1>
            <p class="lead">Three Pillars. One Transformation.</p>
        </div>
    </section>

    <section class="section-padding">
        <div class="container">
            <div class="pillar-block">
                <div class="pillar-num">01</div>
                <div class="pillar-content">
                    <h2 class="text-orange">Identity Excavation</h2>
                    <p class="tagline">Lead from who you are.</p>
                    <ul>
                        <li>Discover your core values and leadership style.</li>
                        <li>Understand your power, blind spots, and purpose.</li>
                        <li>Learn how identity shapes leadership impact.</li>
                    </ul>
                </div>
            </div>

            <div class="pillar-block">
                <div class="pillar-num">02</div>
                <div class="pillar-content">
                    <h2 class="text-orange">Dialogue Mastery</h2>
                    <p class="tagline">Hold space for difficult conversations.</p>
                    <div class="pillar-visual">
                         <img src="/images/dialogue-neon.png" alt="Facilitator with neon visualization" />
                    </div>
                    <ul>
                        <li>Facilitate conversations across differences.</li>
                        <li>Navigate conflict with confidence.</li>
                        <li>Build trust, cohesion, and shared understanding.</li>
                    </ul>
                </div>
            </div>

            <div class="pillar-block">
                <div class="pillar-num">03</div>
                <div class="pillar-content">
                    <h2 class="text-orange">Rapid Impact Cycle</h2>
                    <p class="tagline">From idea to action in 90 days.</p>
                    <ul>
                        <li>Design a real community project.</li>
                        <li>Test, refine, and implement solutions.</li>
                        <li>Measure impact and learn fast.</li>
                    </ul>
                </div>
            </div>
            
            <div class="text-center" style="margin-top: 4rem;">
                <h3 class="text-yellow">Are you ready?</h3>
                <a href="/apply" class="btn btn-primary">Start Application</a>
            </div>
        </div>
    </section>
</Layout>

<style>
    .page-header {
        padding: 8rem 0 4rem;
        background-color: #081020;
        border-bottom: 1px solid var(--color-blueprint-line);
        background-image: url('/images/blueprint-bg.png');
    }

    .pillar-block {
        display: flex;
        gap: 3rem;
        margin-bottom: 4rem;
        padding-bottom: 4rem;
        border-bottom: 1px dashed var(--color-blueprint-line);
        align-items: flex-start;
    }
    
    .pillar-num {
        font-family: var(--font-headline);
        font-size: 6rem;
        color: rgba(255, 255, 255, 0.1);
        line-height: 0.8;
    }
    
    .tagline {
        font-size: 1.25rem;
        font-weight: bold;
        color: var(--color-white);
        margin-bottom: 1.5rem;
    }
    
    ul {
        list-style: none; /* Custom bullets later if needed */
        padding-left: 1rem;
        border-left: 2px solid var(--color-sun-yellow);
    }
    
    li { margin-bottom: 1rem; color: #ccc; }

    .pillar-visual img {
        width: 100%;
        max-width: 400px;
        margin: 1.5rem 0;
        border: 1px solid var(--color-neon-orange);
        box-shadow: 4px 4px 0 var(--color-sun-yellow);
    }

    @media (max-width: 768px) {
        .pillar-block { flex-direction: column; gap: 1rem; }
    }
</style>
